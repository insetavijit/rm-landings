{
  // ===== Astro Language =====
  "files.associations": {
    "*.astro": "astro"
  },
  "astro.enabled": true,
  // ===== CSS / SCSS IntelliSense =====
  "html-css-class-completion.includeGlobPattern": "**/*.{css,scss,html,astro}",
  "html-css-class-completion.HTMLLanguages": [
    "html",
    "astro"
  ],
  "html-css-class-completion.CSSLanguages": [
    "css",
    "scss"
  ],
  "html-css-class-completion.enableEmmetSupport": true,
  // âœ… Load Bootstrap for class name IntelliSense
  "css.remoteStyleSheets": [
    "./node_modules/bootstrap/dist/css/bootstrap.min.css"
  ],
  // ===== Emmet inside Astro =====
  "emmet.includeLanguages": {
    "astro": "html"
  },
  // Optional: Improve Tailwind + Bootstrap coexistence
  "editor.quickSuggestions": {
    "strings": true
  },
  "editor.suggest.preview": true
}
