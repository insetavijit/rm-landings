---
// index.astro
import "../assets/styles/main.scss";
import Navbar from "../components/Navbar.astro";
import HeroSection from "../components/HeroSection.astro";
import FeatureSection from "../components/FeatureSection.astro";
import Layout from "../layouts/Layout.astro";
import GallerySection from "../components/GallerySection.astro";
import About from "../components/about.astro";
import Mainfooter from "../components/mainfooter.astro";
---

<Layout>
	<header class="position-relative vh-100 overflow-hidden bg-dark text-white">
		<Navbar />
		<HeroSection />
	</header>

	<section>
		<FeatureSection />
	</section>
	<section>
		<GallerySection />
	</section>

	<section class="container d-flex justify-content-center">
		<About />
	</section>
	<section>
		<FeatureSection />
	</section>
	<footer class="container p-5">
		<Mainfooter />
	</footer>
</Layout>
